# ============================================
# CREDENTIALS - REQUIRED
# ============================================

# Kalshi API credentials
KALSHI_API_KEY_ID=your-kalshi-api-key-id
KALSHI_PRIVATE_KEY_PATH=/path/to/kalshi-private-key.pem
# Alternative: KALSHI_PRIVATE_KEY_FILE=/path/to/kalshi-private-key.pem

# Polymarket credentials (controller)
POLY_PRIVATE_KEY=0x_your_private_key_here
POLY_FUNDER=0x_your_wallet_address_here

# ============================================
# EXECUTION SETTINGS
# ============================================

# Dry run mode (default: 1 = enabled, safe mode)
# Set to 0 for live trading
DRY_RUN=1

# Log level: error, warn, info, debug, trace
RUST_LOG=info

# ============================================
# DISCOVERY SETTINGS
# ============================================

# Run discovery only and exit (default: 0)
# DISCOVERY_ONLY=0

# Force re-discovery, ignoring cache (default: 0)
# FORCE_DISCOVERY=0

# Minutes between discovery refreshes, 0 to disable (default: 15)
# DISCOVERY_INTERVAL_MINS=15

# Comma-separated list of leagues to monitor (default: all)
# Available: epl, bundesliga, laliga, seriea, ligue1, ucl, uel, eflc,
#            nba, nfl, nhl, mlb, mls, ncaaf, cs2, lol, cod
# ENABLED_LEAGUES=nba,nfl,cs2

# Comma-separated list of leagues to exclude
# DISABLED_LEAGUES=

# Alias validation for team code mapping (default: 1 = enabled)
# Set to 0 to disable alias gap warnings
# ALIAS_VALIDATION=1

# Debug market pairing (default: 0)
# PAIRING_DEBUG=0
# PAIRING_DEBUG_LIMIT=50

# ============================================
# HEARTBEAT SETTINGS
# ============================================

# Verbose heartbeat logging (default: 0)
# VERBOSE_HEARTBEAT=0

# Heartbeat interval in seconds (default: 10)
# HEARTBEAT_INTERVAL_SECS=10

# ============================================
# ARBITRAGE DETECTION
# ============================================

# Threshold in cents for profitable arb (default: 99)
# An arb is valid when total cost (prices + fees) <= threshold
# Valid range: 1-100. Lower = more conservative (fewer arbs)
# ARB_THRESHOLD_CENTS=99

# Minimum contracts for a valid arb (default: 1.0)
# Arbs with fewer executable contracts are rejected
# Must be > 0
# ARB_MIN_CONTRACTS=1.0

# ============================================
# CIRCUIT BREAKER (Risk Management)
# ============================================

# Enable circuit breaker (default: true)
CB_ENABLED=true

# Max position per market in contracts
CB_MAX_POSITION_PER_MARKET=50000

# Max total position across all markets in contracts
CB_MAX_TOTAL_POSITION=100000

# Max daily loss in dollars (default: 500.0)
CB_MAX_DAILY_LOSS=500.0

# Max consecutive errors before tripping (default: 5)
CB_MAX_CONSECUTIVE_ERRORS=5

# Cooldown period in seconds after trip (default: 300 = 5 minutes)
CB_COOLDOWN_SECS=300

# ============================================
# TEST MODE (Synthetic Arbitrage)
# ============================================

# Enable test mode with synthetic arb opportunities (default: 0)
# TEST_ARB=0

# Type of synthetic arb: poly_yes_kalshi_no, kalshi_yes_poly_no
# TEST_ARB_TYPE=poly_yes_kalshi_no

# ============================================
# HYBRID / REMOTE EXECUTION
# ============================================

# Platforms the controller executes locally (default: all)
# Comma-separated: kalshi, polymarket (or poly)
# Empty = pure router mode (all trades sent to remote trader)
# CONTROLLER_PLATFORMS=kalshi,polymarket

# Bind address for remote trader WebSocket server
# REMOTE_TRADER_BIND=0.0.0.0:9001

# Explicit WebSocket URL (overrides Tailscale discovery)
# WEBSOCKET_URL=ws://100.x.x.x:9001

# ============================================
# TRADER-SPECIFIC (for remote trader binary)
# ============================================

# Platforms the trader initializes
# TRADER_PLATFORMS=kalshi,polymarket

# Single platform mode for trader
# TRADER_PLATFORM=kalshi

# Run trader once and exit (for testing)
# ONE_SHOT=0

# Trader Polymarket credentials (same as controller, can use these aliases)
# POLYMARKET_PRIVATE_KEY=0x_your_private_key_here
# POLYMARKET_API_KEY=your-api-key
# POLYMARKET_API_SECRET=your-api-secret
# POLYMARKET_API_PASSPHRASE=your-passphrase
# POLYMARKET_FUNDER=0x_your_wallet_address_here

# Polymarket signature type (only needed if signer != funder)
# 0 = EOA (signer == funder)
# 1 = Poly Proxy
# 2 = Poly Gnosis Safe (default)
# POLY_SIGNATURE_TYPE=2
